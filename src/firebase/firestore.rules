
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for UserProfile
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if isOwner(userId);
    }

    // Rules for Attendance
    match /users/{userId}/attendance/{attendanceId} {
      allow read, write: if isOwner(userId);
    }

    // Rules for LeaveRequest
    match /users/{userId}/leaveRequests/{leaveRequestId} {
      allow read, write: if isOwner(userId);
    }

    // Rules for Payroll
    match /users/{userId}/payroll/{payrollId} {
      allow read, write: if isOwner(userId);
    }

    // Rules for ChatMessage
    match /users/{userId}/chatMessages/{chatMessageId} {
      allow read, write: if isOwner(userId);
    }

    // Rules for Candidate
    match /candidates/{candidateId} {
      allow read, write: if request.auth != null; // Example: Allow any logged-in user
    }

    // Rules for Anomaly
    match /anomalies/{anomalyId} {
      allow read, write: if request.auth != null; // Example: Allow any logged-in user
    }
  }
}
