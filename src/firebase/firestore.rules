
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User Profiles: Authenticated users can read all profiles, but only write to their own.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Attendance: User-specific, only accessible by the owner.
    match /users/{userId}/attendance/{attendanceId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Leave Requests: User-specific, only accessible by the owner.
    match /users/{userId}/leaveRequests/{leaveRequestId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Payroll: User-specific, only accessible by the owner.
    match /users/{userId}/payroll/{payrollId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Chat Messages: User-specific, only accessible by the owner.
    match /users/{userId}/chatMessages/{chatMessageId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Candidates: Allow read for any authenticated user, assuming it's for HR/admins.
    // More restrictive rules might be needed later (e.g., role-based access).
    match /candidates/{candidateId} {
      allow read: if request.auth != null;
      // allow write: if isHR_Admin(); // Example of a more restrictive rule
    }

    // Anomalies: Allow read for any authenticated user, assuming it's for HR/admins.
    match /anomalies/{anomalyId} {
      allow read: if request.auth != null;
      // allow write: if isHR_Admin(); // Example of a more restrictive rule
    }
  }
}
