/**
 * @fileoverview Firestore Security Rules for the HR and Payroll application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for most data, with dedicated top-level collections for Candidates and Anomaly records.
 *
 * Data Structure:
 * - User profiles and their related data (attendance, leave requests, payroll, chat messages) are nested under `/users/{userId}`.
 * - Candidate and Anomaly data are stored in top-level collections `/candidates` and `/anomalies`.
 *
 * Key Security Decisions:
 * - Users can only read and write their own profile data.
 * - Users can only access their own attendance, leave requests, payroll, and chat message data.
 * - Listing of all users is implicitly denied (no top-level `/users` collection).
 * - Public read access is not granted to any collections, ensuring data privacy.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows users to read and write their own profile data.
     * @path /users/{userId}
     * @allow (read, write) if request.auth.uid == userId
     * @deny (read, write) if request.auth.uid != userId
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Allows a user to manage their own attendance records.
     * @path /users/{userId}/attendance/{attendanceId}
     * @allow (create, read, update, delete) if request.auth.uid == userId
     * @deny (create, read, update, delete) if request.auth.uid != userId
     * @principle Enforces user-ownership for attendance data.
     */
    match /users/{userId}/attendance/{attendanceId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.employeeId == userId;
      allow update: if isSignedIn() && isOwner(userId) && isExistingOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId) && isExistingOwner(userId);
    }

    /**
     * @description Allows a user to manage their own leave requests.
     * @path /users/{userId}/leaveRequests/{leaveRequestId}
     * @allow (create, read, update, delete) if request.auth.uid == userId
     * @deny (create, read, update, delete) if request.auth.uid != userId
     * @principle Enforces user-ownership for leave request data.
     */
    match /users/{userId}/leaveRequests/{leaveRequestId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.employeeId == userId;
      allow update: if isSignedIn() && isOwner(userId) && isExistingOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId) && isExistingOwner(userId);
    }

    /**
     * @description Allows a user to manage their own payroll information.
     * @path /users/{userId}/payroll/{payrollId}
     * @allow (create, read, update, delete) if request.auth.uid == userId
     * @deny (create, read, update, delete) if request.auth.uid != userId
     * @principle Enforces user-ownership for payroll data.
     */
    match /users/{userId}/payroll/{payrollId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.employeeId == userId;
      allow update: if isSignedIn() && isOwner(userId) && isExistingOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId) && isExistingOwner(userId);
    }

    /**
     * @description Allows a user to manage their own chat messages.
     * @path /users/{userId}/chatMessages/{chatMessageId}
     * @allow (create, read, update, delete) if request.auth.uid == userId
     * @deny (create, read, update, delete) if request.auth.uid != userId
     * @principle Enforces user-ownership for chat message data.
     */
    match /users/{userId}/chatMessages/{chatMessageId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.employeeId == userId;
      allow update: if isSignedIn() && isOwner(userId) && isExistingOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId) && isExistingOwner(userId);
    }

    /**
     * @description Allows read and write access to candidate information.
     * @path /candidates/{candidateId}
     * @allow (create, read, update, delete) if false
     * @principle Restricts access to candidate information.
     */
    match /candidates/{candidateId} {
      allow get: if false;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows read and write access to anomaly information.
     * @path /anomalies/{anomalyId}
     * @allow (create, read, update, delete) if false
     * @principle Restricts access to anomaly information.
     */
    match /anomalies/{anomalyId} {
      allow get: if false;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }
  }
}