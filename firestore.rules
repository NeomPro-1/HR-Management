rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces user-level access control for user profiles.
     * @path /users/{userId}
     * @allow (create) - A user can create their own profile if the userId matches their auth UID.
     * @allow (get, update) - A user can get/update their own profile if the userId matches their auth UID.
     * @deny (create) - A user cannot create a profile with a userId that doesn't match their auth UID.
     * @deny (update) - A user cannot update another user's profile.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      // Verified user identity
      function isSignedIn() {
        return request.auth != null;
      }

      // Is the user the owner?
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if false;
    }

    /**
     * @description Enforces user-level access control for attendance records.
     * @path /users/{userId}/attendance/{attendanceId}
     * @allow (create, get, update, list) - A user can create, get, update and list their own attendance records if the userId matches their auth UID.
     * @deny (create, get, update, list) - A user cannot create, get, update or list attendance records for other users.
     * @principle Enforces document ownership for writes and reads.
     */
    match /users/{userId}/attendance/{attendanceId} {
        // Verified user identity
        function isSignedIn() {
          return request.auth != null;
        }

        // Is the user the owner?
        function isOwner(userId) {
          return request.auth.uid == userId;
        }

        allow get: if isSignedIn() && isOwner(userId);
        allow list: if isSignedIn() && isOwner(userId);
        allow create: if isSignedIn() && request.auth.uid == userId;
        allow update: if isSignedIn() && isOwner(userId);
        allow delete: if false;
    }

    /**
     * @description Enforces user-level access control for leave requests.
     * @path /users/{userId}/leaveRequests/{leaveRequestId}
     * @allow (create, get, update, list) - A user can create, get, update and list their own leave requests if the userId matches their auth UID.
     * @deny (create, get, update, list) - A user cannot create, get, update or list leave requests for other users.
     * @principle Enforces document ownership for writes and reads.
     */
    match /users/{userId}/leaveRequests/{leaveRequestId} {
        // Verified user identity
        function isSignedIn() {
          return request.auth != null;
        }

        // Is the user the owner?
        function isOwner(userId) {
          return request.auth.uid == userId;
        }

        allow get: if isSignedIn() && isOwner(userId);
        allow list: if isSignedIn() && isOwner(userId);
        allow create: if isSignedIn() && request.auth.uid == userId;
        allow update: if isSignedIn() && isOwner(userId);
        allow delete: if false;
    }

    /**
     * @description Enforces user-level access control for payroll information.
     * @path /users/{userId}/payroll/{payrollId}
     * @allow (create, get, update, list) - A user can create, get, update and list their own payroll information if the userId matches their auth UID.
     * @deny (create, get, update, list) - A user cannot create, get, update or list payroll information for other users.
     * @principle Enforces document ownership for writes and reads.
     */
    match /users/{userId}/payroll/{payrollId} {
        // Verified user identity
        function isSignedIn() {
          return request.auth != null;
        }

        // Is the user the owner?
        function isOwner(userId) {
          return request.auth.uid == userId;
        }

        allow get: if isSignedIn() && isOwner(userId);
        allow list: if isSignedIn() && isOwner(userId);
        allow create: if isSignedIn() && request.auth.uid == userId;
        allow update: if isSignedIn() && isOwner(userId);
        allow delete: if false;
    }

    /**
     * @description Enforces user-level access control for chat messages.
     * @path /users/{userId}/chatMessages/{chatMessageId}
     * @allow (create, get, update, list) - A user can create, get, update and list their own chat messages if the userId matches their auth UID.
     * @deny (create, get, update, list) - A user cannot create, get, update or list chat messages for other users.
     * @principle Enforces document ownership for writes and reads.
     */
    match /users/{userId}/chatMessages/{chatMessageId} {
        // Verified user identity
        function isSignedIn() {
          return request.auth != null;
        }

        // Is the user the owner?
        function isOwner(userId) {
          return request.auth.uid == userId;
        }

        allow get: if isSignedIn() && isOwner(userId);
        allow list: if isSignedIn() && isOwner(userId);
        allow create: if isSignedIn() && request.auth.uid == userId;
        allow update: if isSignedIn() && isOwner(userId);
        allow delete: if false;
    }

    /**
     * @description Defines access control for candidate data.
     * @path /candidates/{candidateId}
     * @allow (get, list) - Allows anyone to get or list all candidates.
     * @deny (create, update, delete) - Denies creation, updating, and deletion of candidates to everyone.
     * @principle Restricts write access to candidate data.
     */
    match /candidates/{candidateId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Defines access control for anomaly data.
     * @path /anomalies/{anomalyId}
     * @allow (get, list) - Allows anyone to get or list all anomalies.
     * @deny (create, update, delete) - Denies creation, updating, and deletion of anomalies to everyone.
     * @principle Restricts write access to anomaly data.
     */
    match /anomalies/{anomalyId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}